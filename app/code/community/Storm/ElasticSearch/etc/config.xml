<?xml version="1.0"?>
<config>
    <modules>
        <Storm_ElasticSearch>
            <version>1.0.0</version>
        </Storm_ElasticSearch>
    </modules>
    <global>
        <models>
            <elasticsearch>
                <class>Storm_ElasticSearch_Model</class>
                <resourceModel>elasticsearch_resource</resourceModel>
            </elasticsearch>
            <elasticsearch_resource>
                <class>Storm_ElasticSearch_Model_Resource</class>
            </elasticsearch_resource>
            <!--
            <adminhtml>
                <rewrite>
                    <system_config_source_catalog_search_type>Storm_ElasticSearch_Model_Adminhtml_System_Config_Source_Catalog_Search_Type</system_config_source_catalog_search_type>
                </rewrite>
            </adminhtml>
            -->
        </models>
        <helpers>
            <elasticsearch>
                <class>Storm_ElasticSearch_Helper</class>
            </elasticsearch>
        </helpers>
        <!--
        <events>
            <controller_front_init_before>
                <observers>
                    <elasticsearch_autoloader>
                        <class>elasticsearch/observer_autoloader</class>
                        <method>addAutoloader</method>
                    </elasticsearch_autoloader>
                </observers>
            </controller_front_init_before>
        </events>
        -->
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <elasticsearch after="Mage_Adminhtml">Storm_ElasticSearch</elasticsearch>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <translate>
            <modules>
                <Storm_ElasticSearch>
                    <files>
                        <default>Storm_ElasticSearch.csv</default>
                    </files>
                </Storm_ElasticSearch>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <catalog>
            <search>
                <host>localhost</host>
                <port>9200</port>
            </search>
        </catalog>
    </default>
</config>